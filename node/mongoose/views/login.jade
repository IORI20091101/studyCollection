extends layout
block body
    form(action="/login", method="POST")
        fieldset
            legend Log in
            if(signupEmail)
                p Congratulation on sign up please login blew
            p
                label Email
                input(name="user[email]", type="text" value=signupEmail)
            p
                label Password
                input(name="user[password]", type="password")
            p
                button Submit
            p
                a(href="/") Go back