<html lang="en" data-framework="backbonejs"><head>
    <meta charset="utf-8">
    <title>Backbone.js BookLibrary</title>
    <link rel="stylesheet" href="/css/screen.css">
</head>
<body class="learn-bar">
<div id="books">
    <form id="addBook">
        <div>
            <label for="coverImage">CoverImage : </label>
            <input id="coverImage" name="coverImage" type="text" value="/img/a.jpg" />

            <label for="title">Title : </label>
            <input id="title" type="text"  name="title"/>

            <label for="author">Author : </label>
            <input id="author" type="text"  name="author" />

            <label for="releaseDate">ReleaseDate : </label>
            <input id="releaseDate" type="text"  name="releaseDate" />

            <label for="keywords">Keywords : </label>
            <input id="keywords" type="text"  name="keywords" />

            <button id="add">Add</button>
        </div>
    </form>




</div>



<div class="background-container">
    <div class="bg-dy1">

    </div>
    <div class="bg-dy2" style="background-position: 0px 0px;">

    </div>

</div>



<script id="bookItemTemplate" type="text/x-handlebars-template">
    <form id="addBook">
        <div>
            <label for="coverImage">CoverImage : </label>
            <input id="coverImage" name="coverImage" type="text" value="/img/a.jpg" />

            <label for="title">Title : </label>
            <input id="title" type="text"  name="title" value="{{title}}"/>

            <label for="author">Author : </label>
            <input id="author" type="text"  name="author" value="{{author}}" />

            <label for="releaseDate">ReleaseDate : </label>
            <input id="releaseDate" type="text"  name="releaseDate" value="{{releaseDate}}" />

            <label for="keywords">Keywords : </label>
            <input id="keywords" type="text"  name="keywords"  value="{{keywords}}"/>

            <button id="update" >update</button>
        </div>
    </form>
</script>

<script id="bookTemplate" type="text/x-handlebars-template">
    <div class="bookInnerCon" id="{{_id}}">
        <img src="/img/a.jpg"/>
        <ul>
            <li>Title :  {{ title }}</li>
            <li>Author : {{ author }}</li>
            <li>releaseDate : <br/> {{ releaseDate }}</li>
            <li>Keywords : {{ keywords }}</li>
        </ul>
        <button class="delete">Delete</button>
        <button class="update">update</button>

    </div>
</script>

<script src="/js/lib/handlebars-v4.0.5.js"></script>
<script src="/js/lib/jquery-1.8.3.min.js"></script>
<script src="/js/lib/underscore.js"></script>
<script src="/js/lib/backbone-min.js"></script>
<script src="/js/lib/backbone-localStorage.js"></script>
<script src="/js/models/book.js"></script>
<script src="/js/collections/library.js"></script>
<script src="/js/views/book.js"></script>
<script src="/js/views/library.js"></script>
<script src="/js/views/bookItem.js"></script>

<script src="/js/router/router.js"></script>

<script src="/js/app.js"></script>


<script type="text/javascript">
    $(function(){
        window.onscroll = function(){
            //console.log($(document).scrollTop()+"px")
            $('.background-container .bg-dy2').css('backgroundPosition','0 '+$(document).scrollTop()+"px");
        }

    })
</script>

</body></html>