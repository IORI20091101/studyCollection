<html lang="en" data-framework="backbonejs"><head>
    <meta charset="utf-8">
    <title>Backbone.js BookLibrary</title>
    <link rel="stylesheet" href="/css/screen.css">
</head>
<body class="learn-bar">
<div id="books">
    <form id="addBook" action="/add" method="post">
        <div>
            <label for="coverImage">CoverImage : </label>
            <input id="coverImage" name="coverImage" type="text" value="/img/a.jpg" />

            <label for="title">Title : </label>
            <input id="title" type="text"  name="title"/>

            <label for="author">Author : </label>
            <input id="author" type="text"  name="author" />

            <label for="releaseDate">ReleaseDate : </label>
            <input id="releaseDate" type="text"  name="releaseDate" />

            <label for="keywords">Keywords : </label>
            <input id="keywords" type="text"  name="keywords" />

            <button type="submit" id="add">Add</button>
        </div>
    </form>


    <% for(var i=0; i<books.length; i++) {%>
        <div class="bookContainer">
                <img src="/img/a.jpg"/>
                <ul>
                    <li>Title :  <%= books[i].title %></li>
                    <li>Author : <%= books[i].author %></li>
                    <li>releaseDate : <%= books[i].releaseDate %></li>
                    <li>Keywords : <%= books[i].keyswords %></li>
                </ul>
                <button class="delete">Delete</button>
        </div>
    <% } %>

</div>









<script id="bookTemplate" type="text/template">
    <div class="bookContainer">
        <img src="coverImage" />
        <ul>
            <li>title</li>
            <li>author</li>
            <li>releaseDate</li>
            <li>keywords</li>
        </ul>
        <button class="delete">Delete</button>
    </div>
</script>

<script src="/js/lib/jquery-1.8.3.min.js"></script>
<script src="/js/lib/underscore.js"></script>
<script src="/js/lib/backbone-min.js"></script>
<script src="/js/lib/backbone-localStorage.js"></script>
<script src="/js/models/book.js"></script>
<script src="/js/collections/library.js"></script>
<script src="/js/views/book.js"></script>
<script src="/js/views/library.js"></script>
<script src="/js/app.js"></script>


</body></html>